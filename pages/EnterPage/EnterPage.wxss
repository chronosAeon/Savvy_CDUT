/* pages/EnterPage/EnterPage.wxss */

.Page {
  background-color: ivory;
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.swiperSection {
  height: 50%;
}

.swiper_img{
  width: 100%;
  height: 100%;
}

.loginSection {
  display: flex;
  flex-direction: column;
  height: 100%;
  margin-top: 30rpx;
}

.logBar {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  height: 100rpx
}

.input_title {
  height: 100%;
  width: fit-content;
  font-size: 40rpx
}

.input_content {
  width: 80%;
  background-color: indianred;
  border: solid 2rpx red;
}

.submit_button {
  background-color: moccasin;
  border: solid 2rpx blue;
  border-radius: 100rpx;
  margin-top: 100rpx;
  height: 200rpx;
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  display: table
}

.button_text {
   height: 100%; 
}
