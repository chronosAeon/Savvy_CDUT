.top {
  padding-top: 80rpx;
  /* background-color:rgb(54, 207, 254); */
  background-image: 'https://chronos.fzerolight.cn/static/about_me.jpg'
}

.imgCon {
  display: block;
  width: 160rpx;
  height: 160rpx;
  border-radius: 100%;
  overflow: hidden;
  background-color: #ccc;
  margin: 0 auto 20rpx;
}

.imgCon image {
  width: 100%;
  height: 100%;
}

.name {
  text-align: center;
  font-size: 32rpx;
  padding-bottom: 40rpx;
}
.rowCon {
  padding-left: 30rpx;
  background-color: #fff;
}
.row {
  position: relative;
  padding: 20rpx 0;
  border-bottom:1rpx solid #e4e4e4;

}
.row_l {
  float: left;
  width: 42rpx;
  height: 42rpx;
  margin-right: 42rpx;
}
.row_l image{
  width: 100%;
  height: 100%;
}
.row_text {
  font-size: 32rpx;
  color: #333;
  padding-left: 70rpx;
}
.arrows {
  position: absolute;
  right: 50rpx;
  top: 50%;
  width: 20rpx;
  height: 20rpx;
  border-width: 1rpx;
  border-color: #999 #999 transparent transparent;
  border-style: solid;
  -webkit-transform: rotate(45deg) translateY(-50%);
  transform: rotate(45deg) translateY(-50%);
}
.login_out{
  /* top: 400rpx; */
  width: 90%;
  position: absolute;
  bottom: 100rpx;
}