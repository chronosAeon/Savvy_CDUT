<view class="container">  
  <view class="login-icon">  
    <image class="login-img" src="https://chronos.fzerolight.cn/static/login_bg.jpg"></image>  
  </view>  
  <view class="login-from">  
  
    <!--账号-->  
    <view class="inputView" style='border:{{account_border}};border-radius:{{account_radius}};'>  
      <image class="nameImage" src='/image/icons/account.png'></image>  
      <label class="loginLab">账号</label>  
      <input class="inputText" placeholder="请输入账号" bindinput="AccountInput" />  
    </view>  
     <view class="line" style='margin-left: {{left}};width: {{width}}'></view>   
  
    <!--密码-->  
    <view class="inputView" style='border:{{border}};border-radius:{{radius}};'>  
      <image class="keyImage" src='/image/icons/password.png'></image>  
      <label class="loginLab">密码</label>  
      <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" />  
    </view>  
  
    <!--按钮-->  
    <view class="loginBtnView">  
      <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">登录</button>  
    </view>  
  </view>  
</view>  